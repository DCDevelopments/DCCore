
@model List<DCCore.WebMvc.Models.GroupCheckBoxListUserViewModel>
@{
    ViewBag.Title = "Agregar Usuarios al Grupo";
}
<h2>Index</h2>

@using (Html.BeginForm())
{
    for (var i = 0; i < Model.Count(); i++)
    {
        <table>
            <tr>
                <td>
                    @Html.HiddenFor(it => it[i].UserId)
                    @Html.HiddenFor(it => it[i].Email)
                    @Html.DisplayFor(it => it[i].UserName)
                </td>
                <td>
                    @Html.CheckBoxFor(it => it[i].IsSelected, new { Style = "vertical-            align:3px}" })
                </td>
            </tr>
        </table>

    }

    <input id="Submit1" type="submit" value="Invitar" />

}
  

